package com.betsi.dataprocessor;
@Service
public
public class DataItemService {
	package com.example.demo.service.impl;



	

 class DataServiceImpl implements DataItemRepository {

	    @Autowired
	    private DataRepository dataRepository;

	    @Override
	    public DataRecord getDataById(Long id) {
	        return dataRepository.findById(id).orElse(null);
	    }

	    @Override
	    public List<DataRecord> getAllData() {
	        return dataRepository.findAll();
	    }

	    @Override
	    public DataRecord saveData(DataRecord dataRecord) {
	        return dataRepository.save(dataRecord);
	    }

	    @Override
	    public void deleteData(Long id) {
	        dataRepository.deleteById(id);
	    }
	}

}
