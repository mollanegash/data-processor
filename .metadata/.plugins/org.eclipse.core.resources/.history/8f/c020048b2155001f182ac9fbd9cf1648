package com.betsi.dataprocessor;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class DataItemService implements DataService {
	
	@Autowired
	private DataItemRepository dataItemRepository;
	@Override
	public DataItem getDataById(Long id) {
		// TODO Auto-generated method stub
		return dataItemRepository.getDataById(id);
	}

	@Override
	public List<DataItem> getAllData() {
		// TODO Auto-generated method stub
		return dataItemRepository.getAllData();
	}

	@Override
	public DataItem saveData(DataItem dataItem) {
		// TODO Auto-generated method stub
		return dataItemRepository.saveData(dataItem);
	}

	@Override
	public void deleteData(Long id) {
		dataItemRepository.deleteById(id);

	}

}
